<UserControl x:Class="MAAS_TXIHelper.Views.SetupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MAAS_TXIHelper.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" MinWidth="47"/>
            <ColumnDefinition Width="400" MinWidth="47"/>
        </Grid.ColumnDefinitions>
        <Label Style="{x:Null}" Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="10,10,10,10" Padding="5" Content="Please select field setup options:"/>
        <ComboBox Style="{x:Null}" Grid.Row="1" Grid.ColumnSpan="2" IsEnabled="{Binding IsSetupTypeSelectionEnabled}" ItemsSource="{Binding SetupTypes}" SelectedItem="{Binding SetupTypeSelected}" Margin="10,10,10,10" Padding="5"/>
        <Label Style="{x:Null}" Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="10,10,10,10" Padding="5" Content="Please select the combined PTV:"/>
        <ComboBox Style="{x:Null}" Grid.Row="3" Grid.ColumnSpan="2" IsEnabled="{Binding IsStructureSelectionEnabled}" ItemsSource="{Binding AllStructures}" SelectedItem="{Binding StructureSelected}" Margin="10,10,10,10" Padding="5"/>
        <TextBlock Style="{x:Null}" Grid.Row="4" Grid.ColumnSpan="2" Margin="10,10,10,10" Padding="5" >Click this button to start:</TextBlock>
        <Button Style="{x:Null}" x:Name="SetupButton" Grid.Row="5" Grid.ColumnSpan="2" Margin="5"  
                IsEnabled="{Binding IsSetupBtnEnabled}" Content="{Binding SetupBtnText}" Command="{Binding SetupCmd}" />
        <TextBox Style="{x:Null}" x:Name="OutputTextBox" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                IsReadOnly="True"
                Grid.Row="6" Grid.RowSpan="2" Grid.ColumnSpan="2" Margin="10,10,10,10" Padding="5" MaxHeight="80"
                 TextChanged="TextChangedEventHandler"
                Text="{Binding TextBox}">
        </TextBox>
    </Grid>
</UserControl>
